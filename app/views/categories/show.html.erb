<h1>Categories > <%=@category.title%></h1>

<h1 class="blogtitle">Posts about <%=@category.title%></h1>

<%if @category.posts.empty?%>
  <h2 class="blogsubtitle"> No Posts in this category yet.</h2>
<%else%>
  <%@category.posts.each do |c|%>
    <p id="smaller">
      <%=link_to c.title, post_path(c)%><br>
      <%=c.created%>
    </p>
  <%end%>
<%end%>

<button id="hamburger">&#9776;</button>
<div class="nav"><%= render 'posts/navlinks'%><a href="" id="cross">&#735;</a></div>


<div class="top">
  <button id="top">&#8593;</button>
</div>

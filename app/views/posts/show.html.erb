<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Created:</strong>
  <%= @post.created %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p><%=@post.comments.count%> comment(s)</p>

<div class="actions"><%= link_to 'Edit', edit_post_path %></div>
<div class="actions"><%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' } %></div>
<div class="actions"><%= link_to 'Back', posts_path %></div>
<div class="actions"><%= link_to 'Post a Comment', new_post_comment_path(@post) %></div>

<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="titlefield">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="datefield">
    <%= form.label :created %>
    <%= form.text_field :created %>
  </div>

  <div class="textfield">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div

  <%= form.category_select :category_id, Category.all, :id, :title%>

  <div class="submit">
    <%= form.submit %>
  </div>
<% end %>
